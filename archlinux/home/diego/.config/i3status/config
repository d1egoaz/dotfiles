general {
        colors = true
        interval = 5
}

order += "volume master"
order += "disk /"
#order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "battery 0"
order += "battery 1"
#order += "cpu_usage"
order += "load"
order += "tztime local"

wireless _first_ {
        #format_up = "W: (%quality at %essid) %ip"
        format_up = " (%essid)"
        format_down = " "
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery all {
        format = "%status %percentage %remaining"
	integer_battery_capacity = true
	#status_chr = "⚡ CHR"
        #status_bat = "🔋 BAT"
        status_chr = " "
        status_bat = " "
        status_unk = "? UNK"
        status_full = "☻ FULL"
        low_threshold = 10
}

battery 0 {
        format = "%percentage"
	integer_battery_capacity = true
}

battery 1 {
        format = "%percentage"
	integer_battery_capacity = true
}

tztime local {
        format = " %a(%d) %b(%m)  %I:%M:%S%P"
}

cpu_usage {
	format = " %usage"
}

load {
        format = " %1min"
}

disk "/" {
        format = " %avail"
	prefix_type = custom
}

volume master {
    format = "%volume  "
    format_muted = " "
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

