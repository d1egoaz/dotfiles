#!/bin/bash
kcn() {
    kubectl config get-contexts -o=name
}

_context() {
    local CONTEXT="$(kcn | fzf --prompt 'k8s context > ' --query 'tier-shared')"
    echo $CONTEXT
}

_namespace() {
    local NAMESPACE="$(kubectl get namespaces --context $1 -o name | cut -d'/' -f2 | fzf --prompt 'k8s namespace > ' --query 'kafka')"
    echo $NAMESPACE
}
_kc() {
  local KUBE_CONTEXT="$(_context)"
  local KUBE_NAMESPACE="$(_namespace $KUBE_CONTEXT)"
  echo "KUBE_CONTEXT=$KUBE_CONTEXT" > .kube-env
  echo "KUBE_NAMESPACE=$KUBE_NAMESPACE" >> .kube-env

  cat .kube-env
}

_kc
