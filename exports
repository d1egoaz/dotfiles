export EDITOR="vim"

# Prefer US English and use UTF-8
export LANG="en_US.UTF-8"
export LC_ALL="en_US.UTF-8"

# JAVA
export JAVA_HOME="/Library/Java/JavaVirtualMachines/jdk1.8/Contents/Home"
export JAVA_OPTS="-Dfile.encoding=UTF8 -Dscala.color"

# PATH
PATH=$PATH:/Users/diegoa/.rbenv/shims:/usr/bin:/bin:/usr/sbin:/sbin:/usr/local/bin:/usr/local/git/bin:/usr/local/sbin
PATH="/usr/local/bin:$PATH" # debe ser local primero que usr
PATH="$HOME/.rbenv/bin:$PATH"
PATH="$PATH:$JAVA_HOME/bin"

# my utils
PATH="~/bin:$PATH"

# DOCKER
export DOCKER_TLS_VERIFY=1
export DOCKER_IP=192.168.99.100
export DOCKER_HOST=tcp://$DOCKER_IP:2376
export DOCKER_CERT_PATH=/Users/diegoa/.boot2docker/certs/boot2docker-vm

export PATH MANPATH DOCKER_IP DOCKER_HOST

# ansible
export ANSIBLE_TRANSPORT=ssh
export ANSIBLE_SSH_ARGS="-o ControlMaster=auto -o ControlPersist=60s -o ControlPath=/tmp/a-%h-%p-%r"
export ANSIBLE_NOCOWS=1

PATH="/usr/local/opt/coreutils/libexec/gnubin:$PATH"
export PATH

#docker-machine
eval $(timeout 3 docker-machine env dev 2>/dev/null)
