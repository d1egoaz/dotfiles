# Prefer US English and use UTF-8
export LANG="en_US.UTF-8"
export LC_ALL="en_US.UTF-8"

# JAVA
if [[ "$OSTYPE" =~ ^linux-gnu ]]; then
  export JAVA_HOME="/usr/lib/jvm/default"
else
  export JAVA_8_HOME="/Library/Java/JavaVirtualMachines/jdk1.8/Contents/Home"
  export JAVA_HOME="/Library/Java/JavaVirtualMachines/openjdk-11.jdk/Contents/Home"
fi

# PATH
PATH="$JAVA_HOME/bin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:$HOME/.local/bin:$PATH"

if [ -e ~/.nix-profile/etc/profile.d/nix.sh ]; then . ~/.nix-profile/etc/profile.d/nix.sh; fi # added by Nix installer

# go
export GOROOT=$($HOMEBREW_PREFIX/bin/go env GOROOT)
# export GOPATH="$HOME/go:$HOME:$HOME/code/go"
export GOPATH="$HOME"
export GOPRIVATE="github.com/Shopify/*"
PATH="$PATH:$GOPATH/bin:$GOROOT/bin"
export PATH

# fzf
export FZF_DEFAULT_OPTS='--height 30% --no-preview --layout reverse --multi -0 --no-info --pointer ‚óè --color "gutter:-1,pointer:#00ff00"'
# Setting fd as the default source for fzf
export FZF_DEFAULT_COMMAND='fd --type f --hidden --follow --exclude .git'
# To apply the command to CTRL-T as well
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"

# cloudplatform: add Shopify clusters to your local kubernetes config
export KUBECONFIG=$HOME/.kube/config.shopify.cloudplatform:$HOME/.kube/config.shopify.production-registry

export EDITOR="emacsclient -t"                  # $EDITOR opens in terminal
export VISUAL="emacsclient -c -a emacs"         # $VISUAL opens in GUI mode
export ALTERNATE_EDITOR="vim"
export EMACS_ADDITIONAL_DIR="$HOME/dotfiles-private/shopify"

if [ -e $HOME/.nix-profile/etc/profile.d/nix.sh ]; then . $HOME/.nix-profile/etc/profile.d/nix.sh; fi # added by Nix installer
