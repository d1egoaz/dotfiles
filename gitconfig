[merge]
  conflictstyle = diff3
  tool = diffmerge
[diff]
  tool = diffmerge
  compactionHeuristic = true

[core]
  excludesfile = ~/.gitignore_global
  commentchar = @
  ignorecase = false
[commit]
  gpgsign = true

[help]
  autocorrect = 1
[alias]
  ca = commit -a
  co = checkout
  cs = commit
  lg = log -p
  who = shortlog -s --
  hist = log --pretty=format:"%C(yellow)%h\\ %Cgreen%ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --graph --date=short --decorate
  ls = log --pretty=format:"%C(yellow)%h\\ %Cgreen%ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --graph --date=short --decorate
  ll = log --pretty=format:"%C(yellow)%h\\ %Cgreen%ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
  pr = !"pr() { git fetch origin pull/$1/head:pr-$1; git checkout pr-$1; }; pr"

[includeIf "gitdir:~/dev/work/"]
  path = .gitconfig-work
[includeIf "gitdir:~/dotfiles/"]
  path = .gitconfig-personal
[includeIf "gitdir:~/dev/personal/"]
  path = .gitconfig-personal
