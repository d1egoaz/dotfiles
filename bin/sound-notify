#!/bin/bash

function is_mute {
  amixer get Master | grep "\[off\]"
}

if is_mute; then
  PCT=$(amixer get Master | grep -o -E "[0-9]+%" | tail -n 1)
  notify-send "Sound muted: $PCT" -t 1000
else
  PCT=$(amixer get Master | grep -o -E "[0-9]+%" | tail -n 1)
  notify-send "Sound: $PCT" -t 1000
fi

